# KitchenHelper-AI Backend Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=sqlite:///./database/kitchenhelper.db

# JWT Authentication
# CRITICAL: Generate a secure key with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET_KEY=your-super-secret-key-CHANGE-THIS-IN-PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# App Settings
APP_NAME=KitchenHelper-AI
APP_VERSION=1.0.0
# Security: DEBUG=False in production (prevents info leaks)
DEBUG=False

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# AI Providers
# Gemini (Pro Tier) - Get API Key from https://ai.google.dev/
GOOGLE_AI_API_KEY=

# Gemini Model
GEMINI_MODEL=gemini-2.0-flash-exp

# Ollama (Free Tier) - Local AI on Raspberry Pi
# For Pi deployment: Use localhost (with network_mode: host in docker-compose.yml)
# For Docker Desktop: Use host.docker.internal
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Email Service (Resend.com)
# Get API Key from: https://resend.com/api-keys
# Free Plan: 100 emails/day, 3000/month
RESEND_API_KEY=

# From Email (IMPORTANT: Use main domain, not subdomain!)
# Format: "Name <email@yourdomain.com>"
# Example: KitchenHelper <noreply@kitchenhelper-ai.de>
RESEND_FROM_EMAIL=KitchenHelper <noreply@kitchenhelper-ai.de>

# Reply-To Email (optional, for user replies)
RESEND_REPLY_TO=support@kitchenhelper-ai.de
